<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d9d9d9"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:background="@drawable/card_like2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/ime_spomenika_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/in_card_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="dgdfgsdfg"
                    android:textColor="@color/main_color"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_color"></View>

                <TextView
                    android:id="@+id/mjesto_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_bottom_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/label_top_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Mjesto"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/label_text" />

                <TextView
                    android:id="@+id/mjesto_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginRight="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Mjesto"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/main_text" />

                <TextView
                    android:id="@+id/godina_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_bottom_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/label_top_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Godina"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/label_text" />

                <TextView
                    android:id="@+id/godina_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginRight="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Godina"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/main_text" />

                <TextView
                    android:id="@+id/pismo_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_bottom_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/label_top_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Pismo"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/label_text" />

                <TextView
                    android:id="@+id/pismo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginRight="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Pismo"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/main_text" />

                <TextView
                    android:id="@+id/jezik_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_bottom_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/label_top_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Jezik"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/label_text" />

                <TextView
                    android:id="@+id/jezik_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginRight="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Jezik"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/main_text" />

                <TextView
                    android:id="@+id/sadrzaj_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_bottom_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/label_top_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Sadržaj"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/label_text" />

                <TextView
                    android:id="@+id/sadrzaj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginRight="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Sadržaj"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/main_text" />

                <TextView
                    android:id="@+id/velicina_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_bottom_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/label_top_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Veličina"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/label_text" />

                <TextView
                    android:id="@+id/velicina_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginRight="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Veličina"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/main_text" />

                <TextView
                    android:id="@+id/zanimljivosti_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/label_bottom_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginTop="@dimen/label_top_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Zanimljivosti"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/label_text" />

                <TextView
                    android:id="@+id/zanimljivosti_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/in_card_margin"
                    android:layout_marginLeft="@dimen/in_card_margin"
                    android:layout_marginRight="@dimen/in_card_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Zanimljivosti"
                    android:textColor="@color/second_color"
                    android:textSize="@dimen/main_text" />

                <LinearLayout
                    android:id="@+id/link_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/link_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:layout_marginTop="@dimen/card_margin"
                        android:fontFamily="sans-serif-medium"
                        android:text="više..."
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/main_text"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>