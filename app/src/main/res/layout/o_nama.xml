<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d9d9d9"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:background="@drawable/card_like2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:text="Projektni tim"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/ffos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:layout_marginTop="@dimen/label_top_margin"
            android:typeface="sans"
            android:text="Filozofski fakultet Osijek"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            android:gravity="center"
            android:onClick="Link"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:typeface="sans"
            android:text="Matej Peharda (student)"
            android:textColor="@color/second_color"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:typeface="sans"
            android:text="Silvijo Šaur (student)"
            android:textColor="@color/second_color"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/milica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:typeface="sans"
            android:text="Izv. prof. dr. sc. Milica Lukić"
            android:textColor="@color/second_color"
            android:textSize="15sp"
            android:gravity="center"
            android:onClick="Link"
            />

        <TextView
            android:id="@+id/vera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:typeface="sans"
            android:text="Vera Blažević Krezić, znanstvena novakinja"
            android:textColor="@color/second_color"
            android:textSize="15sp"
            android:gravity="center"
            android:onClick="Link"
            />

        <TextView
            android:id="@+id/etfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:layout_marginTop="@dimen/label_top_margin"
            android:typeface="sans"
            android:text="Elektrotehnički fakultet Osijek"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            android:gravity="center"
            android:onClick="Link"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:typeface="sans"
            android:text="Luka Mandić (student)"
            android:textColor="@color/second_color"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:typeface="sans"
            android:text="Matija Marić (student)"
            android:textColor="@color/second_color"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/balen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/label_bottom_margin"
            android:layout_marginLeft="@dimen/in_card_margin"
            android:layout_marginRight="@dimen/in_card_margin"
            android:typeface="sans"
            android:text="dr.sc. Josip Balen"
            android:textColor="@color/second_color"
            android:textSize="15sp"
            android:gravity="center"
            android:onClick="Link"
            />

    </LinearLayout>

</LinearLayout>