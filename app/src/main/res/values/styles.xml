<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:overScrollMode">never</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_more_vert_white_24dp</item>

    </style>

    <style name="Autocomplete" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/apptheme_textfield_activated_holo_light</item>
    </style>

    <style name="AboutUsTv" >
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/label_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/in_card_margin</item>
        <item name="android:layout_marginRight">@dimen/in_card_margin</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MonumentInfoLabelTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/label_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/in_card_margin</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/label_text</item>
    </style>

    <style name="MonumentInfoTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/in_card_margin</item>
        <item name="android:layout_marginRight">@dimen/in_card_margin</item>
        <item name="android:layout_marginBottom">@dimen/label_top_margin</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/second_color</item>
        <item name="android:textSize">@dimen/main_text</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/main_color</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
