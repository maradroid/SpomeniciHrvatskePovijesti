<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_like2"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:id="@+id/parent_layout_ll"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:id="@+id/iv_card_image"
        android:background="@color/main_color"
        android:scaleType="centerCrop"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_century"
        android:layout_marginLeft="@dimen/in_card_margin"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        android:typeface="sans"
        android:text="sdffasdfsdf"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_interesting"
        android:textColor="@color/second_color"
        android:text="sdfasdfs"
        android:layout_marginLeft="@dimen/in_card_margin"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:typeface="sans"
        />

</LinearLayout>